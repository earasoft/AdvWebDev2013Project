<h1>Listing posts</h1>

<table cellpadding = "20" id="posts">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
      <tr id=<%= post.unique_id %>>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post , { :class=>"show" }  %></td>
        <td><%= link_to 'Edit', edit_post_path(post), { :class=>"edit" } %></td>
        <td><%= link_to 'Destroy', post_path(post),method: :delete, :class=>"destroy" %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>